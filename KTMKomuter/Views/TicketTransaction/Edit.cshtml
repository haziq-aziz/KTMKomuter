@model KTMKomuter.Models.TicketTransaction
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <main role="main" class="pb-3">
        <div class="card">
            <div class="card-header">
                Ticket Details
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <label class="font-weight-bold">Ticket Id:</label>
                        @Html.DisplayFor(x => x.ViewId)
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="font-weight-bold">Customer Information</h5>
                            <div class="form-group">
                                <label>Name:</label>
                                @Html.TextBoxFor(x => x.CustName, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>IC/Passport No:</label>
                                @Html.TextBoxFor(x => x.CustIdentity, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Email:</label>
                                @Html.TextBoxFor(x => x.CustEmail, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="text-center">
                        <div><input type="submit" value="Submit" class="btn btn-primary" /></div>
                        <div>@Html.ActionLink("Back to List", "AdminDashboard", null, new { @class = "btn btn-secondary ml-2" })</div>
                        
                    </div>
                }
            </div>
        </div>
    </main>
</div>
